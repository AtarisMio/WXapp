.topBar{
    position: relative;
    background-color: #8D91FF;
    width: 100%;
    height: 200rpx;
}
.topBar image.leftIcon{
    width: 16px;
    height: 16px;
    position: absolute;
    top: 40px;
    left: 20px;
}
.topBar .monthAndYear{
    position: absolute;
    top:36px;
    left: 260rpx;
    font-family:Arial, Helvetica, sans-serif;
    font-weight: 200;
    font-size: 40rpx;
    color: white;
}
.topBar image.rightIcon{
    width: 16px;
    height: 16px;
    position: absolute;
    top: 40px;
    right: 20px;
}
.weekDay{
    display: flex;
}
.weekDay .week{
    display: flex;
    flex-grow: 1;
    width: 100rpx;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
    justify-content: center;
    font-family:Arial, Helvetica, sans-serif;
}
.monthDay{

}
.monthDay .tr{
    display: flex;
}
.monthDay .tr .day{
    display: flex;
    flex-grow: 1;
    width: 50rpx;
    line-height: 107rpx;
    border-radius: 5px;
    margin-top: 10px;
    margin-bottom: 10rpx;
    justify-content: center;
    font-family:Arial, Helvetica, sans-serif;
    color: #999;
}
.monthDay .tr .hideDayInfo{

}
.monthDay .tr .showDayInfo{
    border:1rpx solid #8D91FF;
    line-height: 103rpx;
    width: 46rpx;
}
